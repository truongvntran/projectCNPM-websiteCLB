<div id="carouselExampleControls " class="carousel slide" data-ride="carousel">
  <div class="carousel-inner ">
    <div class="carousel-item active">
      <img class="d-block w-100" src="img/clb.jpg" alt="First slide" style="height: 450px;">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="img/silde2.png" alt="Second slide" style="height: 450px;">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="img/slide3.jpg" alt="Third slide" style="height: 450px;">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class="container">
    <div class="main col" style="display:block;">
        <div class="page-title">
            <p class=""><strong>TIN TỨC & SỰ KIỆN</strong></p>
        </div>
        <div class="content">
          {{#each news}}
            <ul>
                <li>
                    <a href="/homepage/detailNew"> <img src="{{this.img}}"> </a>
                    <div class="txt">
                      <p>
                        <strong><a href="/homepage/detailNew  ">{{this.title}}</a></strong>
                        {{this.content}}
                      </p>
                    </div>         
                </li>
            </ul>
            {{/each}}
        </div>
    </div>
  </div>
</div>
