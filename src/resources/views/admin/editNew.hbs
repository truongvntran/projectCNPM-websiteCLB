<div class="container">
    <div class="mt-4 ml-4">
        <h3>Cập nhật tin tức</h3>
        <form class="mt-4" method="POST" action="/admin/{{news._id}}/updateNew?_method=PUT">
            <div class="form-group">
                <label for="name">Tiêu đề</label>
                <input type="text" class="form-control" value="{{news.title}}" id="name" name = "title">
            </div>
            <div class="form-group">
                <label for="description">Link</label>
                <textarea class="form-control"  id="description" name = "link">{{news.link}}</textarea>
            </div>
            <div class="form-group">
                <label for="description">Hình ảnh</label>
                <textarea class="form-control"  id="description" name = "img">{{news.img}}</textarea>
            </div>
            <div class="form-group">
                <label for="description">Nội dung</label>
                <textarea class="form-control"  id="description" name = "content">{{news.content}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Lưu lại</button>
        </form>
    </div>
</div>