<div class="container">
    <div class="mt-4 ml-4">
        <h3>Cập nhật thông tin ban quản trị</h3>
        <form class="mt-4" method="POST" action="/admin/{{bqt._id}}/updateBQT?_method=PUT">
            <div class="form-group">
                <label for="office">Chức vụ</label>
                <input type="text" class="form-control" value="{{bqt.office}}" id="office" name = "office">
            </div>
            <div class="form-group">
                <label for="fullname">Tên</label>
                <textarea class="form-control"  id="fullname" name = "fullname">{{bqt.fullname}}</textarea>
            </div>
            <div class="form-group">
                <label for="avatar">Avatar</label>
                <textarea class="form-control"  id="avatar" name = "avatar">{{bqt.avatar}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Lưu lại</button>
        </form>
    </div>
</div>